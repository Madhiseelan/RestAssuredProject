  <groupId>DemoRestAssuredProject</groupId>
  <artifactId>DemoRestAssuredProject</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <name>DemoRestAssuredProject</name>
  <!-- FIXME change it to the project's website -->
